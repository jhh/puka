{
  "watch": {
    "build": {
      "patterns": [
        "puka"
      ],
      "extensions": "html"
    }
  },
  "scripts": {
    "build": "postcss puka/static/css/main.css -o puka/static/css/main.min.css",
    "install": "gunzip --stdout --keep --force node_modules/htmx.org/dist/htmx.min.js.gz > puka/static/js/htmx.min.js",
    "watch": "npm-watch"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.2",
    "autoprefixer": "^10.4.7",
    "cssnano": "^5.1.8",
    "npm-watch": "^0.11.0",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "tailwindcss": "^3.1.0"
  },
  "dependencies": {
    "htmx.org": "^1.7.0"
  }
}
